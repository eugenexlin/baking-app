<?xml version="1.0" encoding="utf-8"?>
<!--Based on code from https://gist.github.com/MarsVard/8297976-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <shape>
      <padding android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp" />
      <solid android:color="@color/transparent" />
    </shape>
  </item>

  <item>
    <shape>
      <padding android:top="0dp" android:right="0dp" android:bottom="1dp" android:left="1dp" />
      <solid android:color="@color/paper_shadow_1" />
      <corners android:radius="3dp" />
    </shape>
  </item>
  <item>
    <shape>
      <padding android:top="1dp" android:right="3dp" android:bottom="3dp" android:left="1dp" />
      <solid android:color="@color/paper_shadow_2" />
      <corners android:radius="5dp" />
    </shape>
  </item>
  <!-- Background -->
  <item>
    <shape >
      <solid android:color="@color/colorAppBackground" />
      <corners android:radius="3dp" />
    </shape>
  </item>

</layer-list>